// Single source of truth for mdsnano_event branch payload and bindings.
// Format:
//   MDS_BRANCH_SCALAR(type, name)
//   MDS_BRANCH_SCALAR_INIT(type, name, init_value)
//   MDS_BRANCH_ARRAY(type, name, fixed_size)

// Event metadata
MDS_BRANCH_SCALAR(UInt_t, run)
MDS_BRANCH_SCALAR(UInt_t, luminosityBlock)
MDS_BRANCH_SCALAR(ULong64_t, event)

// Weights
MDS_BRANCH_SCALAR_INIT(Float_t, Generator_weight, -1)
MDS_BRANCH_SCALAR(Float_t, genWeight)
MDS_BRANCH_ARRAY(Float_t, LHEScaleWeight, 9)

// Event-level kinematics and pileup
MDS_BRANCH_SCALAR(Float_t, PFMET_pt)
MDS_BRANCH_SCALAR(Float_t, PFMET_phi)
MDS_BRANCH_SCALAR(Float_t, Pileup_nTrueInt)
MDS_BRANCH_SCALAR(Float_t, PuppiMET_pt)
MDS_BRANCH_SCALAR(Float_t, PuppiMET_phi)
MDS_BRANCH_SCALAR(UChar_t, PV_npvs)
MDS_BRANCH_SCALAR(Float_t, Rho_fixedGridRhoFastjetAll)

// Triggers
MDS_BRANCH_SCALAR(Bool_t, HLT_CscCluster_Loose)
MDS_BRANCH_SCALAR(Bool_t, HLT_L1CSCShower_DTCluster50)

// Event quality filters
MDS_BRANCH_SCALAR(Bool_t, Flag_BadPFMuonDzFilter)
MDS_BRANCH_SCALAR(Bool_t, Flag_BadPFMuonFilter)
MDS_BRANCH_SCALAR(Bool_t, Flag_ecalBadCalibFilter)
MDS_BRANCH_SCALAR(Bool_t, Flag_EcalDeadCellTriggerPrimitiveFilter)
MDS_BRANCH_SCALAR(Bool_t, Flag_eeBadScFilter)
MDS_BRANCH_SCALAR(Bool_t, Flag_globalSuperTightHalo2016Filter)
MDS_BRANCH_SCALAR(Bool_t, Flag_goodVertices)
MDS_BRANCH_SCALAR(Bool_t, Flag_hfNoisyHitsFilter)

// Generator particles
MDS_BRANCH_SCALAR(Int_t, nGenPart)
MDS_BRANCH_ARRAY(Float_t, GenPart_eta, 125 * 10)
MDS_BRANCH_ARRAY(Short_t, GenPart_genPartIdxMother, 125 * 10)
MDS_BRANCH_ARRAY(Float_t, GenPart_mass, 125 * 10)
MDS_BRANCH_ARRAY(Int_t, GenPart_pdgId, 125 * 10)
MDS_BRANCH_ARRAY(Float_t, GenPart_phi, 125 * 10)
